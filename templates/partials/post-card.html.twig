<article class="post-card {% if not child.header.featured_image %}no-image{% endif %}">
    {% if child.header.featured_image %}
        <a class="post-card-image-link" href="{{ child.url }}">
            {{ child.media[child.header.featured_image].quality(80).html('',related.title|escape,'post-card-image')}}
        </a>
    {% endif %}
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{child.url}}">
            <header class="post-card-header">
                {% if child.taxonomy.category %}
                   	{% for cat in child.taxonomy.category|slice(0, 1) %}
                    <span class="post-card-tags">{{ cat }}</span>
                    {% endfor %}
                {% endif %} 
                <h2 class="post-card-title">{{child.title}}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{ child.summary(150) }}</p>
            </section>
        </a>
        <footer class="post-card-meta">

            <span class="reading-time">{{ child.content|readingtime({'format': '{minutes_short_count} {minutes_text}'}) }}</span>

        </footer>
    </div>
</article>
