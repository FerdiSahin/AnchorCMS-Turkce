<div class="floating-header">
    <div class="floating-header-logo">
        <a href="{{base_url}}">
            {% if config.theme.favicon %}
                <img src="{{ theme_url }}/assets/img/{{ config.theme.favicon}}" alt="{{site.title}} icon" />
            {% endif %}
            <span>{{site.title}}</span>
        </a>
    </div>
    <span class="floating-header-divider">&mdash;</span>
    <div class="floating-header-title">{{page.title}}</div>
    <div class="floating-header-share">
        <div class="floating-header-share-label">Share this {% include 'partials/icons/point.html.twig' %}</div>
        <a class="floating-header-share-tw" href="https://twitter.com/share?text={{page.title}}&amp;url={{page.url}}"
            onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;">
            {% include 'partials/icons/twitter.html.twig' %}
        </a>
        <a class="floating-header-share-fb" href="https://www.facebook.com/sharer/sharer.php?u={{page.url}}"
            onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;">
            {% include 'partials/icons/facebook.html.twig' %}
        </a>
    </div>
    <progress id="reading-progress" class="progress" value="0">
        <div class="progress-container">
            <span class="progress-bar"></span>
        </div>
    </progress>
</div>
